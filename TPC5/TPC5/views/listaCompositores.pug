extends index

block content
  .w3-card-4
    header.w3-container.w3-pale-green
      h1= titulo 
    .w3-container 
      table.w3-table-all 
        tr 
          th Id 
          th Nome 
          th Data de Nascimento 
          th Data de Óbito 
          th Período  
        each comp in lista
          tr 
            td 
              a(href= "/compositores/" + comp.id) #{comp.id}
            td= comp.nome
            td= comp.dataNasc
            td= comp.dataObito 
            td= comp.periodo
            td
              a.w3-button.w3-khaki(href="/compositores/edit/" + comp.id) Editar 
              a.w3-button.w3-teal(href="compositores/delete/" + comp.id) Apagar

  footer.w3-container.w3-pale-green 
    address Gerado por a95458 em #{data}
    a.w3-button.w3-blue(href='javascript:history.back()') Voltar

