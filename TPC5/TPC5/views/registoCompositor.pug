extends index

block content
  .w3-card-4
    header.w3-container.w3-pale-green
      h1= titulo 
    .w3-container 
        form.w3-container(method="POST")
            fieldset 
                legend Metadados 
                label Id 
                input.w3-input.w3-round(type="text" name="id")
                label Nome 
                input.w3-input.w3-round(type="text" name="nome")
                label Data de Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc")
                label Data de Óbito
                input.w3-input.w3-round(type="text" name="dataObito")
                label Período
                input.w3-input.w3-round(type="text" name="periodo")
                label Bio
                input.w3-input.w3-round(type="text" name="bio")
            fieldset 
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Registar
  footer.w3-container.w3-pale-green
    address Gerado por a95458 em #{data}
    a.w3-button.w3-blue(href='javascript:history.back()') Voltar
