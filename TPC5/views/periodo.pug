extends layout

block content
  .w3-card-4
    header.w3-container.w3-pale-green
      h1= titulo
    
    .w3-container
      table.w3-table-all
        tr 
          th ID
          th Nome
        
        each compositor in periodo.compositores 
          tr
            td
              a(href='/compositores/' + compositor.id)= compositor.id
            td= compositor.nome

    footer.w3-container.w3-pale-green 
      address Gerado por a95458 em #{data}
      a.w3-button.w3-blue(href='javascript:history.back()') Voltar
      br